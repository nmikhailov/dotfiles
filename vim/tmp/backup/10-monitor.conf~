Section "Monitor"
    Identifier             "NEC"
EndSection

Section "Device"
    Identifier             "DeviceRadeon"
    Driver                 "video" #Choose the driver used for this monitor
EndSection

Section "Screen"
    Identifier             "ScreenNec"  #Collapse Monitor and Device section to Screen section
    Device                 "DeviceRadeon"
    Monitor                "NEC"
    DefaultDepth            24 #Choose the depth (16||24)
    SubSection             "Display"
        Depth               24
        Modes              "1280x1024" #Choose the resolution
    EndSubSection
EndSection
