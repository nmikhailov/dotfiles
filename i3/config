assign [class="Skype"] $wsChat
assign [class="Pidgin"] $wsChat
assign [class="Thunderbird"] $wsMail
for_window [class="^Pidgin$" window_role="^conversation$"] resize grow width 0 px or 30 ppt
for_window [window_role="sun-awt-X11-XDialogPeer"] floating disable
for_window [class="Thunar" title="File Operation Progress"] floating enable
